<div class="container text-light">
<h2 class="mb-5">Hall of Fame</h2>
<table class="table table-dark table-striped table-bordered w-50 opacity-75">
    <thead class="thead-dark">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Wins</th>
    </tr>
    </thead>
    <tbody>
    {{#each topWarriorsList}}
        <tr>
            <th scope="row">{{inc @index}}</th>
            <td>{{this.name}}</td>
            <td>{{this.wins}}</td>
    {{/each}}
    </tbody>
</table>
</div>
