<div class="container text-light">
    <h2>Add new Warrior:</h2>
    <form class="row g-3" action="/create" method="POST">
        <div class="form-group col-6">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" minlength="3" maxlength="25" name="name" class="form-control">
            </div>
        </div>
        <div class="form-group col-md-12">
            <p>Total stats points to use: 10</p>
        </div>
        <div class="form-group col-md-2">
            <label for="power" class="col-sm-2 col-form-label">Power:</label>
            <div class="col-sm-10">
                <input required value="1" min="1" max="7" type="number" name="power" class="form-range bg-light">
            </div>
        </div>
        <div class="form-group col-md-2">
            <label for="defence" class="col-sm-2 col-form-label">Defence:</label>
            <div class="col-sm-10">
                <input required value="1" min="1" max="7" type="number" name="defence" class="form-range bg-light">
            </div>
        </div>
        <div class="form-group col-md-2">
            <label for="endurance" class="col-sm-2 col-form-label">Endurance:</label>
            <div class="col-sm-10">
                <input required value="1" min="1" max="7" type="number" name="endurance" class="form-range bg-light">
            </div>
        </div>
        <div class="form-group col-md-2">
            <label for="agility" class="col-sm-2 col-form-label">Agility:</label>
            <div class="col-sm-10">
                <input required value="1" min="1" max="7" type="number" name="agility" class="form-range bg-light">
            </div>
        </div>
        <div class="form-group row d-flex justify-content-center">
            <div class="mt-5">
                <button type="submit" class="btn btn-danger px-5">Create</button>
            </div>
        </div>
    </form>
</div>
